<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/image_cocktail"
        android:scaleType="centerCrop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundPercent="0.66"
        android:foreground="@drawable/gradient_foreground_for_image"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/placeholder_cocktail"/>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Проверка"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:layout_margin="5dp"
        android:lines="1"
        android:textSize="18sp"
        android:ellipsize="end"
        android:paddingBottom="34dp"
        app:layout_constraintBottom_toBottomOf="@id/image_cocktail"
        app:layout_constraintStart_toStartOf="@id/image_cocktail" />
</androidx.constraintlayout.widget.ConstraintLayout>
